<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
              crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<div class="container">
    {% block body %}

        <div class="row">
            {% block header %}

            {% endblock %}


            {% block sidebar %}

            {% endblock %}
            {% block main %}

            {% endblock %}

            {% block footer %}
                <div class="col-12 border rounded">
                    <div class="row">
                        <div class="col-1">
                            <img src="/public/build/hermodur.webp" class="img-fluid"/>

                        </div>
                        <div class="col-3"><small><b>&copy; 2022 Martin Flogaus</b></small></div>
                        <div class="col-4"></div>
                        <div class="col-4">
                            <a href="https://discord.com/api/oauth2/authorize?client_id={{ discord_app_id }}&permissions={{ guild.permissions }}&redirect_uri={{ app.request.schemeAndHttpHost ~ path('api_oauth')|url_encode }}&response_type=code&scope=identify%20email%20bot%20messages.read%20connections">
                                Add Hermodur
                            </a>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
    {% endblock %}
</div>

</body>
</html>
